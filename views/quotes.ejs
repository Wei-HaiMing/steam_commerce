<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotes</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container mt-4">
        <h1 class="mb-4">Quotes</h1>

        <div class="row">
            <% for (let quote of rows) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">"<%= quote.quote %>"</h5>
                            <p class="card-text">Category: <%= quote.category %></p>
                            <p class="card-text">Likes: <%= quote.likes %></p>
                            <a href="/editQuotes?quoteId=<%= quote.quoteId %>" class="btn btn-warning">Update</a>
                            <a href="/deleteQuote?quoteId=<%= quote.quoteId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this quote?')">Delete</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
