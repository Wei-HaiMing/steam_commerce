<div class="justify-content-center img-hover-zoom" style="text-align: center;">
    <!-- <img src="https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/1229490/capsule_616x353.jpg?t=1740623813" alt="v1" class="img-fluid"> -->
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- 1) Indicators/dots -->
        <div class="carousel-indicators">
          <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="<%= game1.name %>"
          ></button>
          <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="1"
            aria-label="<%= game2.name %>"
          ></button>
          <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="2"
            aria-label="<%= game3.name %>"
          ></button>
        </div>
      
        <!-- 2) Slides -->
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="<%= game1.image %>"
              class="d-block w-100"
              alt="First slide"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%= game1.name %></h5>
              <p><%= game1.price %></p>
            </div>
          </div>
          <div class="carousel-item">
            <img
              src="<%= game2.image %>"
              class="d-block w-100"
              alt="Second slide"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%= game2.name %></h5>
              <p><%= game2.price %></p>
            </div>
          </div>
          <div class="carousel-item">
            <img
              src="<%= game3.image %>"
              class="d-block w-100"
              alt="Third slide"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%= game3.name %></h5>
              <p><%= game3.price %></p>
            </div>
          </div>
        </div>
      
        <!-- 3) Controls -->
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#myCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#myCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <br>
    <br>
    <br>
    <p>Carousel</p>
</div>